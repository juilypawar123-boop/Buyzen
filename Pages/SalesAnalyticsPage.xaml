<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Buyzen.Pages.SalesAnalyticsPage"
             Title="Sales &amp; Analytics"
             BackgroundColor="#121212"
             Padding="15">

    <ScrollView>
        <VerticalStackLayout Spacing="20">

            <!-- Header -->
            <Label Text="Sales &amp; Analytics Dashboard"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"/>

            <!-- Date Range Selector -->
            <Frame BackgroundColor="#1E1E1E" CornerRadius="14">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Select Date Range" TextColor="White" FontAttributes="Bold"/>
                    <Picker x:Name="DateRangePicker" TextColor="White">
                        <Picker.Items>
                            <x:String>Last 7 Days</x:String>
                            <x:String>Last 30 Days</x:String>
                            <x:String>This Year</x:String>
                        </Picker.Items>
                    </Picker>
                    <Button Text="Change Time Range"
                            BackgroundColor="#0078D4"
                            TextColor="White"
                            Clicked="OnChangeRangeClicked"
                            HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Revenue Metrics -->
            <Frame BackgroundColor="#1E1E1E" CornerRadius="14">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Revenue Overview" TextColor="White" FontAttributes="Bold"/>
                    <Label x:Name="RevenueLabel" TextColor="#4CAF50" FontSize="20"/>
                    <Label x:Name="ConversionLabel" TextColor="White"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Best Selling Products -->
            <Frame BackgroundColor="#1E1E1E" CornerRadius="14">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Best-Selling Products" TextColor="White" FontAttributes="Bold"/>

                    <CollectionView x:Name="TopProductsView" HeightRequest="200">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="#2A2A2A" Padding="10" CornerRadius="10">
                                    <Label Text="{Binding}" TextColor="White"/>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Actions -->
            <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                <Button Text="Export Report"
                        BackgroundColor="#28A745"
                        TextColor="White"
                        Clicked="OnExportReportClicked"/>

                <Button Text="Drill Down Metrics"
                        BackgroundColor="#FFC107"
                        TextColor="Black"
                        Clicked="OnDrillDownClicked"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
